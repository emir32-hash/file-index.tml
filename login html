  <script>
    const form = document.getElementById('loginForm');
    const emailInput = document.getElementById('email');
    const pwInput = document.getElementById('password');
    const toggle = document.getElementById('togglePw');
    const card = document.getElementById('loginCard');
    const dash = document.getElementById('dashboard');
    const logoutBtn = document.getElementById('logoutBtn');

    toggle.addEventListener('click', ()=>{
      const shown = pwInput.type === 'text';
      pwInput.type = shown ? 'password' : 'text';
      toggle.textContent = shown ? 'Tampilkan' : 'Sembunyikan';
      toggle.setAttribute('aria-pressed', String(!shown));
    });

    form.addEventListener('submit', (e)=>{
      e.preventDefault();
      // simple client-side validation
      const email = emailInput.value.trim();
      const pw = pwInput.value.trim();
      if(!email || !pw){
        alert('Isi email dan kata sandi terlebih dahulu.');
        return;
      }
      if(!/^[^@\s]+@[^@\s]+\.[^@\s]+$/.test(email)){
        alert('Masukkan alamat email yang valid.');
        return;
      }

      // simulate login success
      card.style.display = 'none';
      dash.style.display = 'block';
      // optionally you could persist a token or navigate to another page
    });

    logoutBtn.addEventListener('click', ()=>{
      dash.style.display = 'none';
      card.style.display = 'block';
      form.reset();
    });
  </script>
